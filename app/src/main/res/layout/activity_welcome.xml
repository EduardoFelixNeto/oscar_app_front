<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivOscarTrophy"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_oscar_trophy"
        android:layout_gravity="center_horizontal"
        android:contentDescription="TrofÃ©u do Oscar" />

    <TextView
        android:id="@+id/tvToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Token: "
        android:textSize="18sp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/btnVoteMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Votar Filme" />

    <Button
        android:id="@+id/btnVoteDirector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Votar Diretor" />

    <Button
        android:id="@+id/btnConfirmVote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Voto" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sair" />
</LinearLayout>

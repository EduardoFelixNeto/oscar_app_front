<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvSelectedMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filme Selecionado"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvSelectedDirector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diretor Selecionado"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira o Token" />

    <Button
        android:id="@+id/btnConfirmVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar Voto" />
</LinearLayout>
